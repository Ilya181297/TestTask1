@page
@using TestTask.Common
@using TestTask.Models
@model TestTask.Pages.Divisions.EditModel
@inject IPageHelper pageHelper;
@{
    ViewData["Title"] = "Edit";
}

<h1>@(Model.Division.Id == 0 ? "Создание" : "Изменение") подразделения</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Division.Id" />
            <div class="form-group">
                <label asp-for="Division.Name" class="control-label">Название</label>
                <input asp-for="Division.Name" class="form-control" />
                <span asp-validation-for="Division.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Division.FormationDate" class="control-label">Дата формирования</label>
                <input asp-for="Division.FormationDate" class="form-control" />
                <span asp-validation-for="Division.FormationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Division.Description" class="control-label">Описание</label>
                <input asp-for="Division.Description" class="form-control" />
                <span asp-validation-for="Division.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Division.Children" class="control-label">Родительское подразделение</label>
                <select asp-for="SelectedParentId" asp-items="Model.Divisions">
                </select>
            </div>
            <div style="margin-top: 8px;" class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id=@pageHelper.GetFilterIdOnSession(HttpContext) asp-page-handler="Filter" asp-page="../Index/">Назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
