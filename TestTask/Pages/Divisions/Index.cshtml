@page
@using TestTask.Models
@model TestTask.Pages.Divisions.IndexModel

<h1>Guide</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

@{
    ViewData["Title"] = "Index";
    ShowTreeData(Model.Division);
}

@functions {
    List<int> processedIds = new List<int>();
    public async Task ShowTreeData(ICollection<Division> Division)
    {
        <ul>
            @foreach (var i in Division)
            {
                if (processedIds.Contains(i.ID))
                    continue;

                <li type="disc">
                    @i.Name
                    <a asp-page="./Edit" asp-route-id="@i.ID">Edit</a>
                    <a asp-page="./Details" asp-route-id="@i.ID">Details</a>
                    <a asp-page="./Delete" asp-route-id="@i.ID">Delete</a>
                    @{
                        processedIds.Add(i.ID);
                    }
                    @if (i.Children.Any())
                    {
                        ShowTreeData(i.Children);
                    }
                </li>
            }

        </ul>
    }
   }

<table class="tableDivision" border="1" style="text-align: center">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Division[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Division[0].DateOfFormation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Division[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model.Division)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfFormation)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

