@page
@using TestTask.Common
@using TestTask.Services
@model TestTask.Pages.Workers.EditModel

@{
    ViewData["Title"] = "Edit";
}
<h1>@(Model.Worker.Id == 0 ? "Создание" : "Изменение") работника</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Worker.Id" />
            <div class="form-group">
                <label asp-for="Worker.Surname" class="control-label">Фамилия</label>
                <input asp-for="Worker.Surname" class="form-control" />
                <span asp-validation-for="Worker.Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Worker.Name" class="control-label">Имя</label>
                <input asp-for="Worker.Name" class="form-control" />
                <span asp-validation-for="Worker.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Worker.MiddleName" class="control-label">Отчество</label>
                <input asp-for="Worker.MiddleName" class="form-control" />
                <span asp-validation-for="Worker.MiddleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Worker.BirthDate" class="control-label">Дата рождения</label>
                <input asp-for="Worker.BirthDate" class="form-control" />
                <span asp-validation-for="Worker.BirthDate" class="text-danger"></span>
            </div>
            <div style="margin-top: 8px;" class="form-group">
                <label asp-for="Worker.GenderId" class="control-label">Пол</label>
                <select asp-for="SelectedGender" asp-items="Model.Genders">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Worker.Post" class="control-label">Должность</label>
                <input asp-for="Worker.Post" class="form-control" />
                <span asp-validation-for="Worker.Post" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Worker.IsHasDriveLicenseBool" /> Водительские права
                </label>
            </div>
            <div style="margin-top: 8px;" class="form-group">
                <label asp-for="Worker.DivisionId" class="control-label">Подразделение</label>
                <select asp-for="SelectedDivisionId" asp-items="Model.Divisions">
                </select>
            </div>
            <div style="margin-top: 8px;" class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@HttpContext.Session.GetInt32("SelectedDivisionId")" asp-page-handler="Filter" asp-page="../Index/">Назад</a>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
